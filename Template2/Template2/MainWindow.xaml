<Window x:Class="Template2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" x:Name="mainWindow" Height="350" Width="525" Mouse.MouseMove="MouseEventHandler"  KeyDown="mainWindow_KeyDown">
    <Grid>
        <Canvas Name="cnvPaginas" Grid.Row="1" Grid.Column="1"  />
        <Canvas Name="mainScreen" Grid.Row="1" Grid.Column="1"  />
        <TextBox Name="texto" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="700" Background="Black" Foreground="White" Visibility="Hidden" />
        <TextBox Name="loading" HorizontalAlignment="Center" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="CARGANDO IMAGENES..." VerticalAlignment="Center" Width="300" Background="White" Foreground="Black" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" TextAlignment="Center" />
    </Grid>
</Window>
